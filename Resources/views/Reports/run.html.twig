{% extends "BisonLabReportsBundle::layout.html.twig" %}

{% block content %}

<h1><strong> {{ report.report }} </strong> </h1>

<table class="record_properties" id="reports_table">
    <thead>
    <tr>
      {% for elem in header %}
        <th>{{ elem }}</th>
      {% endfor %}
    </tr>
    </thead>
    <tbody>
      {% for row in data %}
        <tr>
            {% for col in row %}
                {% if col is not empty %}
                        <td>{{ col | raw }}</td>
                {% else %}
                        <td>&nbsp;</td>
                {% endif %}
           {% endfor %}
        </tr>
      {% endfor %}
    </tbody>
</table>

<script type="text/javascript">
$(document).ready(function()
    {
        if ($('#reports_table >tbody >tr').lengt > 200) {
            $('#reports_table').dataTable({
                "order": [],
                "pageLength": 200,
                "lengthMenu": [[ 50, 100, 200, 500 -1], [50, 100, 200, 500, "All"]]
                });
        } else {
            $('#reports_table').dataTable({
                "paging": false,
                "order": []
                });
        }
    }
);
</script>
{% endblock %}
